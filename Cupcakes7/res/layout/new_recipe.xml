<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">
        <TableLayout android:gravity="center" android:layout_width="match_parent" android:layout_marginTop="20dip" android:layout_height="wrap_content" android:id="@+id/rtableLayout1">
            <TableRow android:layout_marginBottom="15dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rtableRow1">
                <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:text="Name"></TextView>
                <EditText android:layout_height="wrap_content" android:text="" android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/new_recipe_name"></EditText>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rtableRow3">
                <TextView android:id="@+id/textView3" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:layout_marginTop="5dip" android:text="Type"></TextView>
                <RadioGroup android:layout_weight="1" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/new_recipe_type">
                    <RadioButton android:layout_width="wrap_content" android:checked="true" android:layout_height="wrap_content" android:text="Appetizer" android:id="@+id/rradio0"></RadioButton>
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Main Dish" android:id="@+id/rradio1"></RadioButton>
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Side Dish" android:id="@+id/rradio2"></RadioButton>
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dessert" android:id="@+id/rradio3"></RadioButton>
                </RadioGroup>
            </TableRow>
        </TableLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rrelativeLayout1">
            <Button android:layout_alignParentRight="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Create" android:id="@+id/new_recipe_create"></Button>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
